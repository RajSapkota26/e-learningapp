<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_2mdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">


        <TextView
            android:id="@+id/iv_question_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10mdp"
            android:background="@drawable/textbk"
            android:fontFamily="@font/muli_black"
            android:padding="@dimen/_10mdp"
            android:text="@string/hwt1"
            android:textColor="@color/white"
            android:textSize="@dimen/_16font_mdp"/>

        <TextView
            android:id="@+id/iv_ans_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_15mdp"
            android:fontFamily="@font/muli_black"
            android:padding="@dimen/_3mdp"
            android:text="Resource title here goes to diffr kgkfg fggfkgg"
            android:textColor="@color/black"
            android:textSize="@dimen/_16font_mdp" />


    </LinearLayout>
</androidx.cardview.widget.CardView>