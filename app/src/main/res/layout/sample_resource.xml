<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/_5mdp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_3mdp"
        android:background="@color/background"
        android:orientation="vertical">
        <TextView
            android:id="@+id/resource_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10mdp"
            android:background="@drawable/textbk"
            android:fontFamily="@font/muli_black"
            android:padding="@dimen/_10mdp"
            android:text="@string/hwt1"
            android:textColor="@color/white"
            android:textSize="@dimen/_16font_mdp"/>

        <TextView
            android:id="@+id/resource_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15mdp"
            android:layout_marginLeft="@dimen/_15mdp"
            android:text="Resource title here goes to diffr kgkfg fggfkgg"
            android:fontFamily="@font/muli_black"
            android:textSize="@dimen/_12font_mdp"
            android:maxWidth="@dimen/_250mdp"
            android:textColor="@color/black"
            android:padding="@dimen/_3mdp" />


    </LinearLayout>
</androidx.cardview.widget.CardView>