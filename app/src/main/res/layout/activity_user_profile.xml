<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".user.activities.UserProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10mdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="@dimen/_96mdp"
            android:layout_height="@dimen/_96mdp"
            android:layout_marginTop="@dimen/_16mdp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_icon"
            app:civ_border_color="#E040FB"
            app:civ_border_width="@dimen/_2mdp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_15mdp"
            app:cardCornerRadius="@dimen/_5mdp"
            android:layout_margin="@dimen/_5mdp">

            <TextView
                android:id="@+id/pfu_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_3mdp"
                android:background="@drawable/pp_txt"
                android:fontFamily="@font/muli_bold"
                android:padding="@dimen/_3mdp"
                android:text="full name \n Sp abinash"
                android:textSize="@dimen/_14font_mdp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_15mdp"
            app:cardCornerRadius="@dimen/_5mdp"
            android:layout_margin="@dimen/_5mdp">

            <TextView
                android:id="@+id/pfu_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_3mdp"
                android:background="@drawable/pp_txt"
                android:fontFamily="@font/muli_bold"
                android:padding="@dimen/_3mdp"
                android:text="user name \n Sp_abinash26"
                android:textSize="@dimen/_14font_mdp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_15mdp"
            app:cardCornerRadius="@dimen/_5mdp"
            android:layout_margin="@dimen/_5mdp">

            <TextView
                android:id="@+id/pfu_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_3mdp"
                android:background="@drawable/pp_txt"
                android:fontFamily="@font/muli_bold"
                android:padding="@dimen/_3mdp"
                android:text="email \n Spabinash2626@gmail.com"
                android:textSize="@dimen/_14font_mdp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_15mdp"
            app:cardCornerRadius="@dimen/_5mdp"
            android:layout_margin="@dimen/_5mdp">

            <TextView
                android:id="@+id/pdu_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_3mdp"
                android:background="@drawable/pp_txt"
                android:fontFamily="@font/muli_bold"
                android:padding="@dimen/_3mdp"
                android:text="Date of birth \n 1994-05-03"
                android:textSize="@dimen/_14font_mdp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_15mdp"
            app:cardCornerRadius="@dimen/_5mdp"
            android:layout_margin="@dimen/_5mdp">

            <TextView
                android:id="@+id/pfu_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_3mdp"
                android:background="@drawable/pp_txt"
                android:fontFamily="@font/muli_bold"
                android:padding="@dimen/_3mdp"
                android:text="Contact \n 9846440376"
                android:textSize="@dimen/_14font_mdp" />
        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/updateBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_16mdp"
            android:background="@drawable/btn_back"
            android:fontFamily="@font/muli_bold"

            android:text="@string/update_profile"
            android:textColor="@color/black"
            app:backgroundTint="@null" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>