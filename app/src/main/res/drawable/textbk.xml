<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape
            android:shape="rectangle">
            <solid android:color="@color/shadow_color" />
            <corners android:radius="@dimen/_10mdp"/>
        </shape>
    </item>
    <item  android:bottom="1dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient android:startColor="#974AEABD"
                android:endColor="#94B2FF59"/>
            <stroke android:width="1dp" android:color="@color/color_white"/>
            <corners android:radius="@dimen/_10mdp"></corners>
        </shape>
    </item>
    <item  android:bottom="1dp" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient android:startColor="#40FFFFFF"
                android:endColor="#00FFFFFF" android:angle="45"/>
            <stroke android:width="@dimen/_2mdp" android:color="@color/color_white"/>
            <corners android:radius="@dimen/_10mdp"></corners>
        </shape>
    </item>
</layer-list>
